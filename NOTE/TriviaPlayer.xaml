<Window x:Class="NOTE.TriviaPlayer"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NOTE"
        mc:Ignorable="d"
        Title="N|O Trivia" Height="720"  Width="1280">
    <Grid Background="Black">
        <MediaElement Name = "myMedia" 
                  LoadedBehavior = "Manual" Margin="-3,1,4,0" Stretch="Uniform" Grid.ColumnSpan="2"/>
        <Canvas HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,10,160,0">
            <Image x:Name="Clock_face_image" Source="/Images/clock_face.png" Visibility="Hidden" Height="150" Width="150"/>
            <Label x:Name="Timer_display" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" 
                   Content ="" BorderThickness="0" FontSize="90" FontWeight="Bold" FontFamily="DS-Digital" Height="131" Width="168" Canvas.Left="-11" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        </Canvas>
    </Grid>
</Window>
