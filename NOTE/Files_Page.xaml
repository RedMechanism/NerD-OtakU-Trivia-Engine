<Page x:Class="NOTE.Files_Page"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:NOTE"
      mc:Ignorable="d" 
      d:DesignHeight="476" d:DesignWidth="724"
      Title="Files_Page">

    <Grid>
        <TreeView x:Name="dirTree" Width="Auto" BorderBrush="#FFFFFFFF" MouseLeftButtonUp="DirTree_SelectedItemChanged"/>
        <Button x:Name="Load_folder" Content="Load Folder" HorizontalAlignment="Left" VerticalAlignment="Bottom" Height="34" Width="111" Click="Load_Folder" Margin="519,0,0,0"/>
    </Grid>
</Page>
